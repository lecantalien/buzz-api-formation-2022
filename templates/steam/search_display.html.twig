                                <a href="#"
                                   data-id="{{ gs.id }}"
                                   class="btn btn-primary btn-sm justify-content-center align-items-center add-to-cart">ðŸ›’</a>
                            </div>
                        </div>

                        {% if loop.last == false %}
                            <hr class="my-4">
                        {% endif %}
                    {% endfor %}

                </div>
            </div>
        </div>
    </main>
{% endblock %}